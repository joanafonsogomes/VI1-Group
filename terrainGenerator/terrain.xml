<?xml version="1.0" ?>
<project name="Geometry Shader - Pass Through" width=512 height=512>
	<assets>
		<attributes>
			<attribute type="RENDERER" name="maxAltitude" data="FLOAT" value=0.00/>
			<attribute type="RENDERER" name="terrainNorm" data="INT" value=0/>
		</attributes>
		<scenes>
			<scene name="Plane" >
				<geometry name = "Grid" type = "GRID" LENGTH=200  DIVISIONS=100>
        		</geometry>
			</scene>
			<scene name="terrains" >
				<buffers name="terrains" primitive="POINTS" material="terrains" >
					<position name="point" fromLibrary="terrainLib" />
				</buffers>
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera">
				<viewport name="MainViewport" />
				<POSITION x=0 y=10 z=7.5 />
				<VIEW x=0.0 y=-0.5 z=-1.0 />
				<UP x=0 y=1 z=0 />
				<NEAR value=0.1 />
				<FAR value=100 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun" >
				<DIRECTION x="1.0" y="-0.5" z="-2" />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="terrain.mlib"/>
		</materialLibs>
		
	</assets>
	
	
	<pipelines>
	
		<pipeline name="p1" >
		
			<pass class="default" name="terrains">
				<scenes>
					<scene name="Plane" />
				</scenes>
				<camera name="MainCamera" />
				<viewport name="MainViewport" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
                    <map fromMaterial="*" toMaterial="terrainMat" toLibrary="terrainLib" />
                </materialMaps>
			</pass>
					
		</pipeline>
		
	</pipelines>

	<interface>
		<window label="settings" >
			<var label="maxAltitude" type="RENDERER" context="CURRENT" 
					component="maxAltitude" def="min=0.8 max=10 step=0.01" />

			<var label="terrainNorm" type="RENDERER" context="CURRENT" 
					component="terrainNorm" def="min=0 max=1 step=1" />
			
		</window>
	</interface>
</project>